<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="buttonStyle">@style/DefaultButtonStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="login_progress_dialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">登录中…</item>

    </style>
    <style name="wait_progress_dialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">请稍候…</item>

    </style>

    <!-- Rich buttons' base style -->
    <style name="JCButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@drawable/jc_button_text_color</item>
        <item name="android:background">@drawable/jc_button</item>
        <item name="android:shadowColor">#CC999999</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
